       data() {\n            return {\n                orders: []\n            }\n        },\n        methods: {\n            fetchItems: function() {\n                database.collection('orders').get().then((querySnapshot) => {\n                    querySnapshot.forEach((doc) => {\n                        this.orders.push([doc.id, doc.data().order])\n                    })\n                })\n            },\n            deleteItem: function(event) {\n                let doc_id = event.target.getAttribute('id');\n                database.collection('orders').doc(doc_id).delete().then(() => location.reload());\n            },\n            route: function(event) {\n                let doc_id = event.target.getAttribute('id');\n                this.$router.push({ name: 'modify', params: { id: doc_id }});\n            }\n        },\n        created() {\n            this.fetchItems()\n        },\n    }\n</script>\n\n<style scoped>\nul {\n  display: flex;\n  flex-wrap: wrap;\n  list-style-type: none;\n  padding: 0;\n}\n\nli {\n  flex-grow: 1;\n  flex-basis: 300px;\n  text-align: center;\n  padding: 10px;\n  border: 1px solid #222;\n  margin: 10px;\n}\n\nbutton {\n  width: 65px;\n  height: 30px;\n  background-color: #80ffd4;\n  border-radius: 10px;\n  border-width: 1px;\n}\n</style>"]}]}